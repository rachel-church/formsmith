{
  "extends": [
    "stylelint-config-sass-guidelines",
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": true,
    "max-nesting-depth": 4,
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
    "selector-no-qualifying-type": [true, { "ignore": ["attribute"] }]
  }
}
